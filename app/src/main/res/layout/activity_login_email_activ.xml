<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.np.areebwaseem.horriblefriends.login_email_activ">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/login_empt_sm" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.76">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:weightSum="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.35">


                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_marginTop="24dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/logo_icon_two_sm" />

                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.15">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/roboto"
                        android:text="@string/enter_details_or_choose"
                        android:textAlignment="center"
                        android:textColor="@color/tw__composer_black"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5">

                    <LinearLayout
                        android:id="@+id/linearLayout5"
                        android:layout_width="@dimen/_246sdp"
                        android:layout_height="@dimen/_180sdp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:orientation="vertical"
                        android:weightSum="1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="horizontal"
                            android:layout_marginBottom="@dimen/_3sdp"
                            android:layout_weight="0.195"
                            android:background="@drawable/buttons_rounded_corners"
                            android:weightSum="1"
                            >

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.2"
                                android:paddingLeft="4dp"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/email_icon" />

                            <EditText
                                android:id="@+id/login_email_edit_text"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.8"
                                android:ems="10"
                                android:gravity="center"
                                android:hint="@string/email_string"
                                android:inputType="textPersonName"
                                android:textAlignment="textStart"
                                android:textColor="@color/tw__composer_black"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>




                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="horizontal"
                            android:layout_marginBottom="@dimen/_3sdp"
                            android:layout_weight="0.195"
                            android:background="@drawable/buttons_rounded_corners"
                            android:weightSum="1"
                            >

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.2"

                                android:paddingTop="6dp"
                                android:paddingBottom="6dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/password_icon" />

                            <EditText
                                android:id="@+id/login_password_edit_text"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.8"
                                android:ems="10"
                                android:hint="@string/password_string"
                                android:inputType="textPassword"
                                android:textAlignment="viewStart"
                                android:textColor="@color/tw__composer_black"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>


                        <Button
                            android:id="@+id/login_button_active"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginBottom="@dimen/_3sdp"
                            android:layout_weight="0.195"
                            android:background="@drawable/buttons_rounded_corners"
                            android:fontFamily="@font/roboto"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:text="@string/log_in"
                            android:textAlignment="center"
                            android:textColor="@color/tw__composer_black"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <LinearLayout
                            android:id="@+id/linearLayout4"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.195"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/twitter_login_button_custom_two"
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="match_parent"
                                android:background="@drawable/buttons_rounded_corners"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:padding="8dp"
                                android:scaleType="centerInside"
                                app:srcCompat="@drawable/twitter_icon_eight_bit" />


                            <ImageButton
                                android:id="@+id/facebook_login_button_custom_two"
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:layout_marginRight="@dimen/_3sdp"
                                android:background="@drawable/buttons_rounded_corners"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:padding="8dp"
                                android:scaleType="centerInside"
                                app:srcCompat="@drawable/face_eight_icon" />

                            <ImageButton
                                android:id="@+id/phone_login_custom_two"
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="match_parent"
                                android:background="@drawable/buttons_rounded_corners"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:padding="8dp"
                                android:scaleType="centerInside"
                                app:srcCompat="@drawable/phone_icon_horri" />


                        </LinearLayout>

                        <Button
                            android:id="@+id/forgot_password_button_active_login"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.22"
                            android:text="@string/forgot_password_string"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />


                    </LinearLayout>


                </android.support.constraint.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/terms_and_privacy_login_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_50sdp"
                android:orientation="vertical"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/I_agree_to"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="@string/terms_underline"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="@string/and_string"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="@string/privacy_underline"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/buttons_rounded_corners"
                        android:text="@string/back_string"
                        android:textAllCaps="false" />

                    <Button
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/buttons_rounded_corners"
                        android:text="@string/confirm_string"
                        android:textAllCaps="false" />

                </LinearLayout>


            </LinearLayout>
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.24">







            <TextView
                android:id="@+id/back_login_active"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="9dp"

                android:layout_marginTop="8dp"
                android:layout_weight="0.7"
                android:fontFamily="@font/roboto"
                android:gravity="center_vertical"
                android:text="@string/back_string"
                android:textColor="@color/tw__composer_black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView7_back_login_email_activ"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView7_back_login_email_activ"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="0.3"
                android:scaleType="centerInside"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/icon_left" />


            <ProgressBar
                android:id="@+id/progress_bar_login_cur_activity"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="0dp"

                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:theme="@style/AppTheme.WhiteAccent"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />


        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

