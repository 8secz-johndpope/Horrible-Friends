                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    android:background="@color/white"
                    android:elevation="4dp"
                    >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey_600"
                        />

                    <TextView
                        android:id="@+id/memes_of_profile_view_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/roboto"
                        android:text="@string/messages_string"

                        android:textColor="@color/black"
                        android:textSize="@dimen/_9sdp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey_600"
                        android:layout_marginTop="4dp"
                        />
                    <ProgressBar
                        android:id="@+id/progressBar_prof_view_memes_list"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:visibility="invisible"
                        android:theme="@style/AppTheme.WhiteAccent"

                        />





                    <TextView
                        android:id="@+id/profile_view_no_memes_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="@string/no_messages_string"
                        android:textSize="@dimen/_11sdp"
                        android:textAlignment="center" />

                    <ListView
                        android:id="@+id/profile_view_memes_list_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="#ffd41d"
                        android:dividerHeight="8dp"

                        />


                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:elevation="4dp"
                    >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey_600"
                        />

                    <TextView
                        android:id="@+id/horrible_friends_of_profile_text_view"
                        android:layout_width="wrap_content"
