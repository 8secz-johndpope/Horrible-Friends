                                    android:padding="@dimen/_8sdp"
                                    android:scaleType="centerInside"
                                    android:src="@mipmap/comment_icon_black"
                                    android:tint="@color/colorPrimaryDark"
                                    android:visibility="visible" />





                            </LinearLayout>

