                        android:textColor="@color/black"

                        android:textSize="@dimen/_9sdp"
                        android:textStyle="bold" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey_600"
                        android:layout_marginTop="4dp"
                        />
                    <ProgressBar
